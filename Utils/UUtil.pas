Unit UUtil;

Interface
   Uses
       Windows, Messages, SysUtils, Classes, Graphics, Math, StrUtils,
       Controls, Forms, Dialogs, Grids, StdCtrls, Db, Variants;

    Type
             TSysCharSet = set of AnsiChar;

//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------

    Function   CharInSetPaulo(C: AnsiChar; const CharSet: TSysCharSet): Boolean; OverLoad;
    Function   CharInSetPaulo(C: WideChar; const CharSet: TSysCharSet): Boolean; OverLoad;
    Function   RetornaEnter(Qtde:   Integer): String;
    Procedure  LimparStringGrid(Sg:   TStringGrid);

//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Implementation

    Uses
           UTStr;

//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Function CharInSetPaulo(C: AnsiChar; const CharSet: TSysCharSet): Boolean; OverLoad;
Begin
  Result := C in CharSet;
End;
//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Function CharInSetPaulo(C: WideChar; const CharSet: TSysCharSet): Boolean; OverLoad;
Begin
  Result := (C >= #$D800) and (C <= #$DFFF);
End;
//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Function RetornaEnter(Qtde: Integer): String;
Var
    Ind:       Integer;
    Saida:     String;
Begin
   Saida := '';
   For Ind := 1 To Qtde Do
   Begin
      Saida := Saida + Char(13);
   End;
   Result := Saida;
End;
//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Procedure  LimparStringGrid(Sg:   TStringGrid);
Var
  Lin:    Integer;
Begin
  For Lin := 1 To Sg.RowCount -1 Do
  begin
    Sg.Rows[Lin].Clear;
  end;
  Sg.RowCount := 2;
end;
